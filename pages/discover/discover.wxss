page{
  height: 100%;
}
.myview {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #eeeeee;
}

.topcontainer {
  width: 750rpx;
  height: 242rpx;
  background: #fff;
  margin-bottom: 16rpx;
  /* box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2); */
}

.userinfo {
  width: 750rpx;
  height: 242rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userinfo-avatar {
  width: 110rpx;
  height: 110rpx;
  margin: 30rpx;
  overflow: hidden;
  display: block;
  margin-top: 50rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 8rpx 0 rgba(0, 0, 0, 0.2);
}

.userinfo-nickname {
  font-size:34rpx;
font-family:PingFang SC;
font-weight:bold;
color:rgba(34,34,34,1);
}

.bangmonobtn {
  width: 184rpx;
  height: 56rpx;
  background: #32bbff;
  border-radius: 14rpx;
  color: #fff;
  font-size: 26rpx;
  letter-spacing: 0.9px;
  line-height: 56rpx;
  position: absolute;
  left: 210rpx;
  bottom: 76rpx;
  text-align: center;
}

.monoidtxt {
  position: absolute;
  left: 230rpx;
  bottom: 90rpx;
  font-size: 26rpx;
  color: #000000;
  letter-spacing: 0.9px;
}

.page__bd {
  width: 750rpx;
  height: 340rpx;
  background: #fff;
  box-shadow: 0 4rpx 8rpx 0 rgba(0, 0, 0, 0.2);
  border-radius: 15rpx;
  padding-left: 30rpx;
  margin-bottom: 30rpx;
}

.weui-cells {
  position: relative;
  background-color: #fff;
  line-height: 1.41176471;

}

.weui-cell:last-child {
  border: none;
}

.weui-cell {
  height: 110rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.weui-cell_active {
  background-color: #ececec;
}

.weui-cell_access {
  color: inherit;
}

.rightIcon {
  width: 22rpx;
  height: 22rpx;
  position: absolute;
  right: 36rpx;
}

.titleword {
  font-family: PingFangSC-Regular;
  letter-spacing: 0.9px;
  text-indent: 20rpx;
  line-height: 30rpx;
  position: relative;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(34,34,34,1);
}

.iconimg {
  width: 40rpx;
  height: 40rpx;
}

.punchClock {
  width: 398rpx;
  height: 120rpx;
  background-image: linear-gradient(-180deg, #fda5a5 0%, #ff635a 100%);
  box-shadow: 0 2px 4px 0 rgba(153, 153, 153, 0.50);
  border-radius: 15rpx;
  text-align: center;
}

.dakaBtn {
  font-size: 40rpx;
  color: #fff;
  line-height: 70rpx;
}

.dateBtn {
  font-size: 28rpx;
  color: #fff;
}

.kefubtn {
  width: 600rpx;
  height: 110rpx;
  background: transparent;
  position: absolute;
  top: -40rpx;
  left: 0rpx;
}

.kefubtn::after {
  border: none;
}


.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.5);

  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modeltips{
  width: 550rpx;
  height: 520rpx;
  padding: 77rpx 0 0 0;
  box-sizing: border-box;
  border-radius: 30rpx;
  background: #ffffff;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  margin: auto;
  z-index: 100000;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.tiptitle{
  color: #222222;
  font-size: 32rpx;
  font-weight: 900;
  margin-bottom: 52rpx;
}

.samesiaze{
  font-size: 30rpx;
  color: #222222;
  
}

